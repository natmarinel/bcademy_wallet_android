<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_margin="24dp"
                android:text="@string/id_asset_details"
                android:textAppearance="?attr/textAppearanceHeadline2"
                app:layout_constraintEnd_toStartOf="@+id/buttonClose"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:id="@+id/buttonClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                android:padding="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/title" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/nft"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/nftname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_margin="24dp"
            android:textAppearance="?attr/textAppearanceHeadline2"
            app:layout_constraintStart_toStartOf="@id/nft"
            app:layout_constraintTop_toBottomOf="@id/nft" />

        <TextView
            android:id="@+id/nftdomain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_margin="24dp"
            android:textAppearance="?attr/textAppearanceHeadline2"
            app:layout_constraintStart_toStartOf="@id/nftname"
            app:layout_constraintTop_toBottomOf="@id/nftname" />

        <TextView
            android:id="@+id/nftid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_margin="24dp"
            android:textAppearance="?attr/textAppearanceHeadline2"
            app:layout_constraintStart_toStartOf="@id/nftdomain"
            app:layout_constraintTop_toBottomOf="@id/nftdomain" />

        <TextView
            android:id="@+id/nftdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_margin="24dp"
            android:textAppearance="?attr/textAppearanceHeadline2"
            app:layout_constraintStart_toStartOf="@id/nftid"
            app:layout_constraintTop_toBottomOf="@id/nftid" />

    </LinearLayout>
</ScrollView>


</layout>

